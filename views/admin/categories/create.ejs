<% include ../header.ejs %>

<section class="section-pagetop bg-info">
    <div class="container clearfix">
        <h2 class="title-page">Admin</h2>

        <nav class="float-left">
            <ol class="breadcrumb text-white">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
            </ol>
        </nav>
    </div>
</section>

<section class="section-content bg padding-y">
    <div class="container">
        <a href="/admin/categorias" class="btn btn-primary col-1"> Voltar </a>
        <br>
        <br>
        <article class="card">
            <header class="card-header">
                <h4 class="card-title mt-2">Criar nova categoria</h4>
            </header>
            <article class="card-body">
                <form method="POST">
                    <div class="form-group">
                        <label>Categoria</label>
                        <input name="category" type="text" class="form-control"
                            placeholder="Digite o nome da categoria" value="<%- form.category %>" required autofocus>
                        <% if (errors && errors.indexOf('category') >=0) {%>  <small class="form-text text-warnign">A categoria deve ser preenchida e com, no mínimo, 4 caracteres</small>  <% } %>
                    </div>
                    <div class="form-group">
                        <label>Descrição</label>
                        <textarea name="description" class="form-control" id="inDescription" rows="3"><%- form.description %></textarea>
                        <% if (errors && errors.indexOf('description') >=0) {%>  <small class="form-text text-warnign">A descrição deve ser preenchida e com, no mínimo, 5 caracteres</small>  <% } %>
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block col-3"> Salvar nova categoria </button>
                    </div>
                </form>
            </article>
        </article>
    </div>
</section>




